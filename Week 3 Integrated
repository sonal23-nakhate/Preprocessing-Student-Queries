            <div class="px-6 py-3 border-t border-white/20 bg-white/40 flex flex-wrap gap-2">
                <button onclick="quickReply('Admission')" class="flex items-center gap-2 bg-white/90 border border-indigo-100 px-3 py-1.5 rounded-full text-xs font-semibold text-indigo-700 hover:bg-indigo-600 hover:text-white transition-all shadow-sm">
                    ðŸŽ“ Admission
                </button>
                <button onclick="quickReply('Fees')" class="flex items-center gap-2 bg-white/90 border border-indigo-100 px-3 py-1.5 rounded-full text-xs font-semibold text-indigo-700 hover:bg-indigo-600 hover:text-white transition-all shadow-sm">
                    ðŸ’° Fees
                </button>
                <button onclick="quickReply('Timings')" class="flex items-center gap-2 bg-white/90 border border-indigo-100 px-3 py-1.5 rounded-full text-xs font-semibold text-indigo-700 hover:bg-indigo-600 hover:text-white transition-all shadow-sm">
                    ðŸ•’ Timings
                </button>
                <button onclick="quickReply('Placement')" class="flex items-center gap-2 bg-white/90 border border-indigo-100 px-3 py-1.5 rounded-full text-xs font-semibold text-indigo-700 hover:bg-indigo-600 hover:text-white transition-all shadow-sm">
                    ðŸš€ Placement
                </button>
            </div>

            <div id="debug-info" class="px-6 py-1 bg-amber-100/60 text-[10px] text-amber-900 font-mono hidden italic"></div>

            <div class="p-4 bg-white border-t border-slate-100">
                <div class="flex items-center gap-2 bg-slate-100 rounded-2xl px-4 py-1 focus-within:ring-2 focus-within:ring-indigo-500 transition-all">
                    <input type="text" id="user-input" 
                        class="flex-1 bg-transparent border-none py-3 text-slate-700 placeholder-slate-400 outline-none" 
                        placeholder="Type 'tyming', 'phn number', or 'cost'...">
                    <button onclick="processInput()" class="bg-indigo-600 text-white w-10 h-10 rounded-xl hover:bg-indigo-700 transition flex items-center justify-center shadow-md">
                        <i class="fas fa-paper-plane text-sm"></i>
                    </button>
                </div>
            </div>
